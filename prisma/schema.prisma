generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           Int            @id @default(autoincrement())
  address      String
  claimHistory ClaimHistory[]

  @@index([address])
}

model ClaimHistory {
  id        Int      @id @default(autoincrement())
  address   String
  amount    Decimal
  claimedAt DateTime
  claimId   Int
  user      User     @relation(fields: [claimId], references: [id])

  @@index([claimId])
}

model HWMCUser {
  id           Int                @id @default(autoincrement())
  address      String
  claimHistory HWMCClaimHistory[]

  @@index([address])
}

model NftData {
  id            Int      @id @default(autoincrement())
  isClaimed     Boolean?
  isBlacklisted Boolean?
  NFTid         Int      @unique
  airdropId     Int?

  @@index([NFTid])
}

model NftClaimData {
  id             Int      @id @default(autoincrement())
  isClaimed      Boolean?
  isBlacklisted  Boolean?
  NFTid          Int
  airdropId      Int?
  claimReqId     String?
  claimReqStatus String?

  @@index([NFTid])
}

model HWMCClaimHistory {
  id         Int      @id @default(autoincrement())
  address    String
  amountUSDT Decimal
  amountwBTC Decimal
  claimedAt  DateTime
  claimId    Int
  user       HWMCUser @relation(fields: [claimId], references: [id])

  @@index([claimId])
}

model HWMCClaimRequest {
  id             Int      @id @default(autoincrement())
  address        String
  amountUSDT     Decimal
  amountwBTC     Decimal
  claimedAt      DateTime
  claimReqId     String
  claimReqStatus String
  airdropId      Int?
  nftIds         String?

  @@index([claimReqId])
}
